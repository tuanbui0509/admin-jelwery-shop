<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="5dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sanpham_image"
            android:layout_width="102dp"
            android:layout_height="84dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/asiafood1" />

        <TextView
            android:id="@+id/quality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/regular"
            android:maxWidth="150dp"
            android:text="Float Cake Vietnam"
            android:textColor="#F06941"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/sanpham_name"
            app:layout_constraintTop_toBottomOf="@+id/sanpham_name" />


        <TextView
            android:id="@+id/sanpham_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/semibold"
            android:maxWidth="150dp"
            android:text="TextView"
            android:textColor="#091020"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/sanpham_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="240dp"
            android:fontFamily="@font/semibold"
            android:text="$6.05"
            android:textColor="#FF6813"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/quality"
            app:layout_constraintTop_toTopOf="@+id/quality"
            app:layout_constraintVertical_bias="0.0" />

